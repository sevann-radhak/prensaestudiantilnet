@model PrensaEstudiantil.Models.Publication

@{
    ViewBag.Title = ("Eliminar " + @Html.DisplayFor(model => model.Title));
}

<div class="col-md-12" style="background-color:inherit">
    <div class="row col-md-12" style="text-align: center">
        <h1>Sistema de Gestión de Publicaciones</h1>
        <h4 class="green-color"><b>¿Estás seguro de que deseas eliminar esta publicación?</b></h4>
        <hr />
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
            @if (Model.LastUpdate != null)
            {
            <span class="gray-color"> @Html.DisplayFor(model => model.LastUpdate) actualizado</span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Header)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Header)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.ImagePath)"
                 style="width: 80px;"
                 alt=@Html.DisplayFor(model => model.Title)
                 title=@Html.DisplayFor(model => model.Title) />
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align: center">
            <a href="#" onClick="history.back();" class="btn btn-default"> Cancelar </a>
            <input type="submit" value="Eliminar" class="btn btn-danger" style="margin-left: 50px" />
        </div>
    }

    <br clear="all" />

</div>
