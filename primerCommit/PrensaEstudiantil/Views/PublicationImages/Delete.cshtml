@model PrensaEstudiantil.Models.PublicationImage

@{
    ViewBag.Title = "Eliminar Imagen";
}

<div class="col-md-12" style="background-color: inherit">
    <div class="row col-md-12" style="text-align: center">
        <h1>Sistema de Gestión de Publicaciones</h1>
        <h4 class="green-color">
            @Html.DisplayFor(model => model.Publication.Title)
            <br />
            <b>¿Estás seguro de eliminar esta Imagen?</b>
        </h4>
        <hr />
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Imagen
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.ImagePath)"
                 style="width: 280px;"
                 alt=@Html.DisplayFor(model => model.Publication.Title)
                 title=@Html.DisplayFor(model => model.Publication.Title) />
        </dd>        
    </dl>

    <div style="margin: 0px auto; text-align: center;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-40">
            <a href="#" onClick="history.back();" class="btn btn-default"> Cancelar </a>
            <input type="submit" value="Delete" class="btn btn-danger ml-40" />
        </div>
        }
    </div>

        <br clear="all" />
        <br clear="all" />

</div>